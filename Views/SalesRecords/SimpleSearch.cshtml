@model IEnumerable<WebApp.Models.SalesRecord>

<h2>Busca Simples</h2>

<div class="form-group">
    <form asp-action="SimpleSearch">    
        <strong><label for="minDate">Data de inicio</label></strong>
        <input  name="minDate" type="date" class="form-control" id="exampleInputEmail1" value = @ViewData["minDate"] >
        <strong><label for="maxDate">Data de t√©rmino</label></strong>
        <input name="maxDate" type="date" class="form-control" id="exampleInputEmail1" value = @ViewData["maxDate"]>
        <input type="submit" value="Buscar" class="btn btn-primary">
    </form>
</div>
<div class="alert alert-dismissible alert-info">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4 class="alert-heading">Valor total:</h4>
  <p class="mb-0">R$ @Model.Sum(obj => obj.Amount)</p>
</div>
<table class="table table-striped">
    <thead>
        <tr class="table-dark">
            <th>
                 @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller.Department.Departamento)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.Department.Departamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }
    </tbody>
</table>