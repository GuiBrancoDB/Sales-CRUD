@model WebApp.Models.View_Models.SalesRecordViewModel

<h2>Adicionar uma nova venda</h2>

<form asp-controller="SalesRecords" asp-action="Create">
    <label asp-for="SalesRecord.Date"> Data </label>
    <input asp-for="SalesRecord.Date" type="date" class="form-control">
    <label asp-for="SalesRecord.Amount"> Valor </label>
    <input asp-for="SalesRecord.Amount" type="numeric" class="form-control">
    <label asp-for="SalesRecord.Status">Status da venda</label>
    <br>
    <select asp-for="SaleStatus" asp-items="Html.GetEnumSelectList<WebApp.Models.Enums.SaleStatus>()" type="button" class="btn btn-primary dropdown-toggle">
        <option selected="selected" value="">Selecione uma opção</option>
    </select>
    <br>
    <div class="form-group">
        <label asp-for="SalesRecord.Seller">Vendedor</label>
        <br>
        <select asp-for="SalesRecord.SellerId" asp-items="@(new SelectList(Model.Sellers,"Id","Name"))" type="button" class="btn btn-primary dropdown-toggle"></select>
    </div>
    <br>
    <input type="submit" class="btn btn-success">
</form>