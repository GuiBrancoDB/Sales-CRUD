@model WebApp.Models.Seller
<h2>Excluir vendedor</h2>
<h3>Deseja realmente excluir o vendedor @Model.Name?</h3>

<div class="form-group">
    <label class="control-label" for="readOnlyInput">Nome</label>
    <input class="form-control" id="readOnlyInput" type="text" placeholder="@Model.Name" readonly="">
  </div>
<div class="form-group">
    <label class="control-label" for="readOnlyInput">Email</label>
    <input class="form-control" id="readOnlyInput" type="text" placeholder="@Model.Email" readonly="">
</div>
<div class="form-group">
    <label class="control-label" for="readOnlyInput">Data de Nascimento</label>
    <input class="form-control" id="readOnlyInput" type="text" placeholder="@Model.BirthDate" readonly="">
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="Excluir" class="btn btn-danger">
    <input type="submit" value="Voltar" class="btn btn-info" asp-action="Index">
</form>