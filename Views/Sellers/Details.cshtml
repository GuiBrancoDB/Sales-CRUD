@model WebApp.Models.View_Models.SellerFormViewModel

<h1>Detalhes do vendedor @Model.Seller.Name</h1>

<div class="form-group">
    <label asp-for="Seller.Name" class="control-label" for="disabledInput">Nome</label>
    <input asp-for="Seller.Name" class="form-control" id="disabledInput" type="text" placeholder="@Model.Seller.Name" disabled="">
  </div>
<div class="form-group">
    <label asp-for="Seller.Email" class="control-label" for="disabledInput">Email</label>
    <input asp-for="Seller.Email" class="form-control" id="disabledInput" type="text" placeholder="@Model.Seller.Email" disabled="">
 </div>
<div class="form-group">
     <label asp-for="Seller.BaseSalary" class="control-label" for="disabledInput">Sal√°rio</label>
    <input asp-for="Seller.BaseSalary" class="form-control" id="disabledInput" type="text" placeholder="@Model.Seller.BaseSalary" disabled="">
 </div>
<div class="form-group">
    <label class="control-label" asp-for="Seller.BirthDate">Data de nascimento</label>
    <input class="form-control" asp-for="Seller.BirthDate" id="disabledInput" type="text" placeholder="@Model.Seller.BirthDate" disabled="">
</div>
<div class="form-group">
            <label asp-for="Seller.DepartmentId">Department</label>
            <select class="form-control" asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Departamento"))"></select>
</div>
<form>
    <input type="submit" value="Voltar" class="btn btn-info" asp-action="Index">
    <input type="submit" class="btn btn-warning" value="Editar Vendedor" asp-action="Edit" asp-route-id="@Model.Seller.Id">
</form>