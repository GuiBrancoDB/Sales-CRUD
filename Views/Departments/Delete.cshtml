@model WebApp.Models.Department

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Realmente deseja deletar o registro?</h3>
<div>
    <h4>Departmento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Voltar a listagem</a>
    </form>
</div>
